# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Set default charset
[*.{js,ts}]
charset = utf-8

# Matches exact files with .js,.ts extension
[*.{js,ts}]
indent_style = tab
indent_size = 4

# Matches exact files with .json, .sh, .md, .yaml extension
[*.{json,sh,.md,.yaml}]
indent_style = space
indent_size = 2
